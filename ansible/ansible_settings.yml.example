# OSや各種ソフトウェアのユーザ情報を定義したファイル
# MySQL関連のユーザ情報
mysql:
  accounts:
      root_user:
        password: XXXXX
      zabbix:
        # MySQLのユーザ名は、Zabbixの公式ドキュメント（https://www.zabbix.com/jp/download?zabbix=7.2）に則って設定すること
        username: zabbix
        password: XXXXXX
  database:
    # MySQLのデータベース名はZabbixの公式ドキュメント（https://www.zabbix.com/jp/download?zabbix=7.2）に則って設定すること
    name: zabbix
    encoding: utf8mb4
# Selenium関連の情報
selenium:
  # APIで使用するAPIトークン
  api_token: XXXX

  # 監視対象ホストを配列で定義する
  target_hosts:
    # ---Snipe-ITのホスト設定---
    # 表示名
    - name: "ホスト表示名1"
      # ホスト
      host: "ホスト名1"
      # ホストグループ
      groups:
        # 「Applications」を設定
        - groupid: 19
      # インタフェース
      interfaces:
            # 「タイプ」を「エージェント(1)」に設定
        - type: 1
          # 「IPアドレス」を設定
          ip: 127.0.0.1
          # DNS名を空欄
          dns: ""
          # 「接続方法」を「IP」に設定
          useip: 1
          # 「ポート」を設定
          port: "10050"
          # 「標準」にチェックを入れる
          main: 1

    # 2つ以上ホストを作成する場合は、以下の記述を複数回定義すること
    # ---XXXホスト設定---
    # # 表示名
    # - name: "XXX"
    #   # ホスト
    #   host: "XXX"
    #   # ホストグループ
    #   groups:
    #     # 「Applications」を設定
